- for option in @response_field.get('field_options.options') || []
  %div
    %label.radio
      %input{"type" => "radio", "checked" => option.checked, "onclick" => "javascript:return false;"}
      = option.label

- if @response_field.get('field_options.include_other_option')
  %div.other-option
    %label.radio
      %input{"type" => "radio"}
      Other

    %input{"type" => "text"}